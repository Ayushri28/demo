package Assign;

import java.util.Scanner;

public class TowerH {
	
	static int TowerOfHanoi(int n)
	{
		int count=0;
		if(n==1)
		{
			count=1;
			return count;
		}
		
			
			TowerOfHanoi(n-1);
			count++;
			
			
			TowerOfHanoi(n-1);
			
		return count;
		
	}

	public static void main(String[] args) {
		
		
		Scanner input= new Scanner(System.in);
		
		System.out.println("enter the no of disks");
		
		int n= input.nextInt();
		
		int c=TowerOfHanoi(n);
		 System.out.println(c);

	}

}
